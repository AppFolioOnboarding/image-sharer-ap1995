<h1>Image Sharer</h1>
<%= link_to 'Add Image', controller: 'images', action: 'new'%>

<h1>Images</h1>

<table>
  <tr>
    <th>Link</th>
    <th>Image</th>
    <th></th>
  </tr>

  <% @images.each do |image| %>
      <tr>
        <td><%= image.link %></td>
        <td><%= image_tag(image.link, width: 400) %></td>
      </tr>
  <% end %>
</table>
